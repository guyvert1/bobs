GuyverMac:ld4 root# cat group_vars//uat_nas/lvm.yml
lvm_settings:
  vm_groups:
      - vgname: uat_nas_VG1
        disks: /dev/sda5,/dev/sdc,/dev/sdd
        create: true
        lvnames:
          - lvname: uat_lv1
            size: 15g
            create: true
            filesystem:
            mount: false
            mount_point: /var/uat1
          - lvname: uat_lv2
            size: 10g
            create: true
            filesystem: ext4
            mount: true
            mount_point: /var/uat2
            mount_options: 'defaults,noatime'
